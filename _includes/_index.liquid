  <!-- Google tag (gtag.js) -->
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('consent', 'default', {
      'ad_storage': 'denied',
      'ad_user_data': 'denied',
      'ad_personalization': 'denied',
      'analytics_storage': 'denied'
    });
    document.cookie.split('; ').some((cookie) => {
      const cookiePrefsStr = 'sitePrefs=';
      if (cookie.startsWith(cookiePrefsStr) && cookie.substring(cookiePrefsStr.length, cookie.length).trim() === 'approved') {
        gtag('consent', 'update', {
          'analytics_storage': 'granted',
        })
        return true;
      }
    });
  </script>
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-H3VSK2D9W9"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-H3VSK2D9W9');
  </script>
